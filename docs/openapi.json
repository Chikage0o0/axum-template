{
  "openapi": "3.1.0",
  "info": {
    "title": "PROJECT_NAME API",
    "description": "PROJECT_NAME 对外 REST API（以 OpenAPI 作为规范中心）。",
    "license": {
      "name": ""
    },
    "version": "0.1.0"
  },
  "paths": {
    "/api/v1/security/admin-password": {
      "patch": {
        "tags": [
          "security"
        ],
        "operationId": "patch_admin_password_handler",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PatchAdminPasswordRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "204": {
            "description": "修改成功（无 body）"
          },
          "400": {
            "description": "请求参数错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponseBody"
                }
              }
            }
          },
          "401": {
            "description": "未登录或 Token 无效 / 当前密码错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponseBody"
                }
              }
            }
          },
          "500": {
            "description": "服务器内部错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponseBody"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearer_auth": []
          }
        ]
      }
    },
    "/api/v1/sessions": {
      "post": {
        "tags": [
          "sessions"
        ],
        "operationId": "create_session_handler",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateSessionRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "登录成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateSessionResponse"
                }
              }
            }
          },
          "400": {
            "description": "请求参数错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponseBody"
                }
              }
            }
          },
          "401": {
            "description": "未授权（密码错误）",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponseBody"
                }
              }
            }
          },
          "500": {
            "description": "服务器内部错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponseBody"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/settings": {
      "get": {
        "tags": [
          "settings"
        ],
        "operationId": "get_settings_handler",
        "responses": {
          "200": {
            "description": "获取运行期配置",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SettingsResponse"
                }
              }
            }
          },
          "401": {
            "description": "未登录或 Token 无效",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponseBody"
                }
              }
            }
          },
          "500": {
            "description": "服务器内部错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponseBody"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearer_auth": []
          }
        ]
      },
      "patch": {
        "tags": [
          "settings"
        ],
        "operationId": "patch_settings_handler",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PatchSettingsRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "更新并返回运行期配置",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SettingsResponse"
                }
              }
            }
          },
          "400": {
            "description": "请求参数错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponseBody"
                }
              }
            }
          },
          "401": {
            "description": "未登录或 Token 无效",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponseBody"
                }
              }
            }
          },
          "500": {
            "description": "服务器内部错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponseBody"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearer_auth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "AppSettings": {
        "type": "object",
        "required": [
          "check_interval_secs",
          "welcome_message"
        ],
        "properties": {
          "check_interval_secs": {
            "type": "integer",
            "format": "int64",
            "minimum": 0
          },
          "welcome_message": {
            "type": "string"
          }
        }
      },
      "CreateSessionRequest": {
        "type": "object",
        "required": [
          "password"
        ],
        "properties": {
          "password": {
            "type": "string",
            "format": "password",
            "maxLength": 256,
            "minLength": 1
          }
        }
      },
      "CreateSessionResponse": {
        "type": "object",
        "required": [
          "token",
          "expires_in"
        ],
        "properties": {
          "expires_in": {
            "type": "integer",
            "format": "int64",
            "minimum": 0
          },
          "token": {
            "type": "string"
          }
        }
      },
      "ErrorResponseBody": {
        "type": "object",
        "description": "失败时的统一错误体（与 `AppError` 的序列化保持一致）。",
        "required": [
          "code",
          "message",
          "request_id"
        ],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32",
            "minimum": 0
          },
          "details": {},
          "message": {
            "type": "string"
          },
          "request_id": {
            "type": "string"
          }
        }
      },
      "IntegrationsSettings": {
        "type": "object",
        "required": [
          "example_api_base",
          "example_api_key_is_set"
        ],
        "properties": {
          "example_api_base": {
            "type": "string"
          },
          "example_api_key_is_set": {
            "type": "boolean"
          }
        }
      },
      "PatchAdminPasswordRequest": {
        "type": "object",
        "required": [
          "current_password",
          "new_password"
        ],
        "properties": {
          "current_password": {
            "type": "string",
            "format": "password",
            "maxLength": 256,
            "minLength": 1
          },
          "new_password": {
            "type": "string",
            "format": "password",
            "maxLength": 256,
            "minLength": 8
          }
        }
      },
      "PatchAppSettings": {
        "type": "object",
        "properties": {
          "check_interval_secs": {
            "type": [
              "integer",
              "null"
            ],
            "format": "int64",
            "minimum": 10
          },
          "welcome_message": {
            "type": [
              "string",
              "null"
            ],
            "maxLength": 256,
            "minLength": 1
          }
        }
      },
      "PatchIntegrationsSettings": {
        "type": "object",
        "properties": {
          "example_api_base": {
            "type": [
              "string",
              "null"
            ],
            "maxLength": 2048,
            "minLength": 1
          },
          "example_api_key": {
            "type": [
              "string",
              "null"
            ],
            "format": "password",
            "description": "覆盖设置：留空字段表示“不修改”；若提供则必须非空。",
            "maxLength": 4096,
            "minLength": 1
          }
        }
      },
      "PatchSettingsRequest": {
        "type": "object",
        "properties": {
          "app": {
            "oneOf": [
              {
                "type": "null"
              },
              {
                "$ref": "#/components/schemas/PatchAppSettings"
              }
            ]
          },
          "integrations": {
            "oneOf": [
              {
                "type": "null"
              },
              {
                "$ref": "#/components/schemas/PatchIntegrationsSettings"
              }
            ]
          }
        }
      },
      "SettingsResponse": {
        "type": "object",
        "required": [
          "app",
          "integrations"
        ],
        "properties": {
          "app": {
            "$ref": "#/components/schemas/AppSettings"
          },
          "integrations": {
            "$ref": "#/components/schemas/IntegrationsSettings"
          }
        }
      }
    },
    "securitySchemes": {
      "bearer_auth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "tags": [
    {
      "name": "sessions",
      "description": "认证与会话"
    },
    {
      "name": "settings",
      "description": "运行期配置"
    },
    {
      "name": "security",
      "description": "安全与密钥轮换"
    }
  ]
}